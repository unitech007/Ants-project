 <% include ../partials/header %>

<meta name="description" content="Ants: Vendors List: Pending and Approved Vendors">
<title><%= __('common.admin_vendor_list_title') %></title>
<link rel="stylesheet" href="/stylesheets/v_list.css" />
<link rel="stylesheet" href="/stylesheets/image_style.css" />

<% include ../partials/navbar %>

<div class="container vendors-list-container">

   <!-- Pending Vendors Section -->
<h3 class="mt-4 mb-3 text-center"><%= __('common.admin_vendor_list_pendingvendors') %></h3>
<% if (pendingVendors && pendingVendors.length > 0) { %>
    <div class="row">
        <% pendingVendors.forEach(function(vendor) { %>
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 mb-4">
                <div class="vendor-image-div">
                    <div class="vendor-image"><img src="<%= vendor.image %>" alt=""></div>
                </div>
                <h2 class="vendor-fname"><%= vendor.fname %></h2>
                <h5 class="vendor-lname"><%= vendor.lname %></h5>
                <p><a href="/<%= vendor.service %>/<%= vendor.subservice %>/<%= vendor._id %>" class="btn btn-primary"><%= __('common.admin_vendor_list_moreinfo') %></a></p>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <p class="text-center"><%= __('common.admin_vendor_list_pendingapproval') %></p>
<% } %>

<!-- Approved Vendors Section -->
<h3 class="mt-4 mb-3 text-center"><%= __('common.admin_vendor_list_approvedvendors') %></h3>
<% if (approvedVendors && approvedVendors.length > 0) { %>
    <div class="row">
        <% approvedVendors.forEach(function(vendor) { %>
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 mb-4">
                <div class="vendor-image-div">
                    <div class="vendor-image"><img src="<%= vendor.image %>" alt=""></div>
                </div>
                <h2 class="vendor-fname"><%= vendor.fname %></h2>
                <h5 class="vendor-lname"><%= vendor.lname %></h5>
                <p><a href="/<%= vendor.service %>/<%= vendor.subservice %>/<%= vendor._id %>" class="btn btn-primary"><%= __('common.admin_vendor_list_approvedmoreinfo') %></a></p>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <p class="text-center"><%= __('common.admin_vendor_list_noapprovedvendors') %></p>
<% } %>


</div>

<% include ../partials/footer %>

