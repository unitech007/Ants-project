<% include ../partials/header %>

<title><%= __('common.admin_edit_customer') %></title>
<link rel="stylesheet" href="/stylesheets/form.css" />

<% include ../partials/navbar %>

<div class="container form-content">
    <h1 class="text-center"><%= __('common.admin_edit') %> <%= customer.username %></h1>
    <div class="form-container">
        <form action="/customer/<%= customer._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" maxlength="30" name="fname" value="<%= customer.fname %>"
                    required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" maxlength="30" name="lname" value="<%= customer.lname %>"
                    required>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" maxlength="254" name="email" value="<%= customer.email %>"
                    required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"><%= __('common.admin_updateprofile') %></button>
            </div>
        </form>
        <a href="/customer/list"><%= __('common.admin_Cancel') %></a>
    </div>
</div>

<% include ../partials/footer %>