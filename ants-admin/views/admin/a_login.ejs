<% include ../partials/header %>

<title><%= __('common.ants_admin_login') %></title>
<link rel="stylesheet" href="/stylesheets/form.css" />

<% include ../partials/navbar %>

<div class="container form-content">
	<h1 class="text-center"><%= __('common.admin_login') %></h1>
	<div class="form-container">
		<form action="/admin/login" method="POST">                      
			<div class="form-group">
				<input class="form-control" type="text" name="username" placeholder="<%= __('common.admin_login_username_placeholder') %>" required autofocus>
			</div>
			<div class="form-group">
				<input class="form-control" type="password" name="password" placeholder="<%= __('common.admin_login_Password_placeholder') %>" required>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block"><%= __('common.admin_login_button') %></button>
			</div>
		</form>
		<a href="/admin/forgot"><%= __('common.admin_Forgot_Password') %></a>
		<!-- <p>Don't have an account? <a href="/admin/register">Register</a></p> -->
	</div>
</div>

<% include ../partials/footer %>