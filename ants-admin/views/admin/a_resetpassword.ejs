<% include ../partials/header %>

<title><%= __('common.admin_resetpassword_title') %></title>
<link rel="stylesheet" href="/stylesheets/form.css" />

<% include ../partials/navbar %>

<div class="container form-content">
	<h1 class="text-center"><%= __('common.admin_resetpassword_heading') %></h1>
	<form action="/admin/reset/<%= token %>" method="POST">
		<div class="form-group">
			<label for="password"><%= __('common.admin_resetpassword_newpassword') %></label>
			<input type="password" name="password" value="" minlength="8" maxlength="30" placeholder="New password"
				autofocus="autofocus" class="form-control" />
		</div>
		<div class="form-group">
			<label for="confirm"><%= __('common.admin_resetpassword_confirmpassword') %></label>
			<input type="password" name="confirm" value="" minlength="8" maxlength="30" placeholder="Confirm password"
				class="form-control" />
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block"><%= __('common.admin_resetpassword_updatepassword') %></button>
		</div>
	</form>
</div>

<% include ../partials/footer %>