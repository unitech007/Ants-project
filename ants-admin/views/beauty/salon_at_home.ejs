<% include ../partials/header %>

<meta name="description" content="Ants: Salon at Home - Book salon services at home with available time slots and vendor options.">
<!-- <link rel="stylesheet" href="/stylesheets/subservices.css" /> -->
<link rel="stylesheet" href="/stylesheets/salon_at_home.css" />
<title>Ants: Salon at Home</title>

<% include ../partials/navbar %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Salon at Home</h1>
            <p>Book professional salon services in the comfort of your home with our trusted vendors.</p>
        </div>
    </header>

    <!-- Booking Form -->
<form id="booking-form" action="/booking/salon_at_home" method="POST">
    
    <!-- Date Input -->
    <div class="form-group">
        <label for="date">Enter date for service</label>
        <input type="date" id="date" name="date" class="form-control" required>
    </div>

    <!-- Time Input -->
    <div class="form-group">
        <label for="time">Enter time for service</label>
        <input type="time" id="time" name="time" class="form-control" required>
    </div>

    <!-- Vendor Suggestions Section (Simple dropdown) -->
<div class="form-group">
    <label for="vendor">Select a vendor</label>

    <!-- Vendor List Dropdown (displayed immediately) -->
    <div id="vendor-list">
        <select id="vendor" name="vendor" class="form-control" required>
            <option value="" disabled selected>Select a vendor</option>
            <% vendors.forEach(function(vendor) { %>
                <option value="<%= vendor.name %>">
                    <%= vendor.name %> - Rating: <%= vendor.rating %> / 5 - â‚¹<%= vendor.price %>
                </option>
            <% }); %>
        </select>
    </div>
</div>


    <!-- Book Now Button -->
    <button type="submit" class="btn btn-primary">Book Now</button>
</form>

<!-- JavaScript for toggling vendor list and submission -->
<script>
    // Function to toggle vendor list visibility
    function toggleVendors() {
        var vendorList = document.getElementById('vendor-list');
        if (vendorList.style.display === 'none') {
            vendorList.style.display = 'block';
        } else {
            vendorList.style.display = 'none';
        }
    }

    // Handle form submission
    document.getElementById('booking-form').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent default form submission

        // Show success notification
        alert("Successfully submitted!");

        // Optionally, you can handle actual form submission here (e.g., using fetch)
        // this.submit(); // Uncomment this line to proceed with submission if needed
    });
</script>



