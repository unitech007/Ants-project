<% include partials/header %>

<title>My Services</title>
<link rel="stylesheet" href="/stylesheets/myservices.css" />

<% include partials/navbar %>

<body>
    <div class="container">
        <h1>Work Types for Selected Service and Subservice</h1>

        <% if (worktypes && worktypes.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Work Type</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% worktypes.forEach(worktype => { %>
                        <tr>
                            <td><%= worktype.name %></td>
                            <td>
                                <form action="/update-price/<%= worktype._id %>" method="POST" class="update-form">
                                    <input 
                                        type="number" 
                                        name="price" 
                                        value="<%= worktype.price || 0 %>" 
                                        step="0.01" 
                                        required
                                    >
                                    <button type="submit">Update</button>
                                </form>
                            </td>
                            <td>
                                <button onclick="alert('Feature not implemented yet!')">Edit Details</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
                
                
            </table>
        <% } else { %>
            <p>No work types found for the selected service and subservice.</p>
        <% } %>
    </div>
</body>

<% include partials/footer %>
