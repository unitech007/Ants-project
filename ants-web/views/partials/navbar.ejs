		<div class="container">
			<% if (error && error.length > 0) { %>
			<div style="margin-top: 16px; font-weight: 500" class="alert alert-danger alert-dismissible" role="alert">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<%= error %>
			</div>
			<% } %>
			<% if (success && success.length > 0) { %>
			<div style="margin-top: 16px; font-weight: 500" class="alert alert-success alert-dismissible" role="alert">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<%= success %>
			</div>
			<% } %>
