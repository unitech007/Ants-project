						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="currentUserMenu" role="button"
								data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<%= __('common.signed_in_as') %> <strong><%= currentUser.username %></strong>
							</a>
							<div class="dropdown-menu" aria-labelledby="currentUserMenu">
								<% if (currentUser.isCustomer) { %>
								<a class="dropdown-item" href="/customer/<%= currentUser._id %>/edit"><%= __('common.customer_edit_profile') %></a>
								<a class="dropdown-item" href="/customer/<%= currentUser._id %>/addresses"><%= __('common.manage_addresses') %></a>
								<% } else { %>
								<a class="dropdown-item" href="/vendor/<%= currentUser._id %>/edit"><%= __('common.vendor_edit_profile') %></a>
								<a class="dropdown-item"
									href="/<%= currentUser.service %>/<%= currentUser.subservice %>/<%= currentUser._id %>"><%= __('common.vendor_view_profile') %></a>
