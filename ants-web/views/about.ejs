<% include partials/header %>

<meta name="description" content="<%= __('common.AboutMetaDescription') %>">
<title><%= __('common.AboutTitle') %></title>
<link rel="stylesheet" href="/stylesheets/about.css" />

<% include partials/navbar %>

<div class="container about-container text-center">
	<section class="jumbotron what-is-ants-container">
		<div class="container">
			<h1><%= __('common.WhatIsAnts') %></h1>
			<p><%= __('common.WhatIsAntsDescription') %></p>
		</div>
	</section>

	<section class="jumbotron objective-container">
		<div class="container">
			<h1><%= __('common.Objective') %></h1>
			<p><%= __('common.ObjectiveDescription') %></p>
		</div>
	</section>

	<% var teamArr = [
			{
				image: "team-member-1a.jpg",
				name: "ISHAK",
				role: __('common.LeadDeveloper')
			},
			{
				image: "team-member-2.jpg",
				name: "ABU",
				role: __('common.SeniorDeveloper')
			},
			{
				image: "team-member-3.jpg",
				name: "ABDUL",
				role: __('common.Marketer')
			},
			{
				image: "team-member-4.jpg",
				name: "SHAHUL",
				role: __('common.ContentWriter')
			},
		];
		%>
	<section class="team-container">
		<h1><%= __('common.Team') %></h1>
		<div class="row">
			<% for(var i = 0 ; i < teamArr.length ; i++){ %>
			<div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
				<div class="team-member">
					<img src="./assets/images/ants_team/<%= teamArr[i].image %>" alt="Universal Infotech">
					<h3><%= teamArr[i].name %></h3>
					<p><%= teamArr[i].role %></p>
				</div>
			</div>
			<% }; %>
		</div>
	</section>

	<section class="jumbotron try-us-container">
		<div class="container">
			<p><%= __('common.TryUsDescription') %></p>
			<a class="btn btn-outline-info btn-lg" href="/services">
				<i class="fas fa-tools"></i><%= __('common.GetStarted') %>
			</a>
		</div>
	</section>
</div>

<% include partials/footer %>
