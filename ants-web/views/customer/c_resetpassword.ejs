<% include ../partials/header %>

<meta name="description" content="<%= __('common.reset_password_meta_description') %>">
<title><%= __('common.reset_password_title') %></title>
<link rel="stylesheet" href="/stylesheets/form.css">

<% include ../partials/navbar %>

<div class="container form-content">
    <h1 class="text-center"><%= __('common.reset_password_heading') %></h1>
    <form action="/customer/reset/<%= token %>" method="POST">
        <div class="form-group">
            <label for="password"><%= __('common.reset_password_new_password_label') %></label>
            <input type="password" name="password" minlength="8" maxlength="30" placeholder="<%= __('common.reset_password_new_password_placeholder') %>" required class="form-control">
        </div>
        <div class="form-group">
            <label for="confirm"><%= __('common.reset_password_confirm_password_label') %></label>
            <input type="password" name="confirm" minlength="8" maxlength="30" placeholder="<%= __('common.reset_password_confirm_password_placeholder') %>" required class="form-control">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block"><%= __('common.reset_password_button') %></button>
        </div>
    </form>
</div>

<% include ../partials/footer %>
