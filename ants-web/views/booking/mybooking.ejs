<% include ../partials/header %>

<meta name="description" content="Ants: My Booking">
<link rel="stylesheet" href="/stylesheets/booking.css" />
<title>My Booking</title>

<% include ../partials/navbar %>

<div class="container">
    <header class="jumbotron">
        <h1>Your Booking Details</h1>
    </header>

    <% if (bookings.length > 0) { %>
        <ul>
            <% bookings.forEach(function(booking) { %>
                <li>
                    <strong>Service:</strong> <%= booking.serviceName %> <br />
                    <strong>Subservice:</strong> <%= booking.subServiceName %> <br />
                    <strong>Date:</strong> <%= booking.date %> <br />
                    <strong>Time:</strong> <%= booking.time %> <br />
                    <strong>Vendor:</strong> <%= booking.vendor %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No bookings found.</p>
    <% } %>
</div>

<% include ../partials/footer %>
