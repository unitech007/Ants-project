<% include ../partials/header %>

<meta name="description" content="<%= __('common.vendor_login_meta') %>">
<title><%= __('common.vendor_login_title') %></title>
<link rel="stylesheet" href="/stylesheets/form.css" />

<% include ../partials/navbar %>

<div class="container form-content">
	<h1 class="text-center"><%= __('common.vendor_login_heading') %></h1>
	<div class="form-container">
		<form action="/vendor/login" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="username" placeholder="<%= __('common.vendor_login_username_placeholder') %>" autofocus>
			</div>
			<div class="form-group">
				<input class="form-control" type="password" name="password" placeholder="<%= __('common.vendor_login_password_placeholder') %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block"><%= __('common.vendor_login_button') %></button>
			</div>
		</form>
		<a href="/vendor/forgot"><%= __('common.vendor_forgot_password') %></a>
		<p><%= __('common.vendor_no_account') %> <a href="/vendor/register"><%= __('common.vendor_register_link') %></a></p>
	</div>
</div>

<% include ../partials/footer %>