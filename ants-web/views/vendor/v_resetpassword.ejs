<% include ../partials/header %>

<meta name="description"
	content="<%= __('common.vendor_reset_password_description') %>">
<title><%= __('common.vendor_reset_password_title') %></title>
<link rel="stylesheet" href="/stylesheets/form.css" />

<% include ../partials/navbar %>

<div class="container form-content">
	<h1 class="text-center"><%= __('common.vendor_reset_password_header') %></h1>
	<form action="/vendor/reset/<%= token %>" method="POST">
		<div class="form-group">
			<label for="password"><%= __('common.new_password_label') %></label>
			<input type="password" name="password" value="" minlength="8" maxlength="30" placeholder="<%= __('common.new_password_placeholder') %>"
				autofocus="autofocus" class="form-control" />
		</div>
		<div class="form-group">
			<label for="confirm"><%= __('common.confirm_password_label') %></label>
			<input type="password" name="confirm" value="" minlength="8" maxlength="30" placeholder="<%= __('common.vconfirm_password_placeholder') %>"
				class="form-control" />
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block"><%= __('common.update_password_button') %></button>
		</div>
	</form>
</div>

<% include ../partials/footer %>