<% include ../partials/header %>

<meta name="description"
	content="<%= __('common.vendor_forgot_password_meta') %>">
<title><%= __('common.vendor_forgot_password_title') %></title>
<link rel="stylesheet" href="/stylesheets/form.css" />

<% include ../partials/navbar %>

<div class="container form-content">
	<h1 class="text-center"><%= __('common.vendor_forgot_password_heading') %></h1>
	<div class="form-container">
		<form action="/vendor/forgot" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" maxlength="254" name="email"
					placeholder="<%= __('common.vendor_forgot_password_placeholder') %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block"><%= __('common.vendor_forgot_password_button') %></button>
			</div>
		</form>
	</div>
</div>

<% include ../partials/footer %>